<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--对于轻量级的style应该避免过多的继承-->

    <!--小蓝色字体-->
    <style name="lit_text_blue">
        <item name="android:textSize">@dimen/lit_textsize</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    <!--小灰色字体-->
    <style name="lit_text_gray">
        <item name="android:textSize">@dimen/lit_textsize</item>
        <item name="android:textColor">@color/darkgray</item>
    </style>
    <!--中等蓝色字体-->
    <style name="mid_text_blue">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/mid_textsize</item>
    </style>
    <!--中等灰色字体-->
    <style name="mid_text_gray" parent="lit_text_blue">
        <item name="android:textSize">@dimen/mid_textsize</item>
        <item name="android:textColor">@color/darkgray</item>
    </style>

    <style name="big_text_blue">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/big_textsize</item>
    </style>
    <!--中等灰色字体-->
    <style name="big_text_gray" parent="lit_text_blue">
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">@dimen/big_textsize</item>
    </style>

    <style name="login_btn">
        <item name="android:background">@drawable/login_bth</item>
        <item name="android:text">@string/login</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="thin_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/thin</item>
        <item name="android:background">@color/darkgray</item>
    </style>

    <style name="bigmargin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/big_padding</item>
    </style>
    <style name="small" parent="bigmargin">
        <item name="android:layout_marginTop">@dimen/mid_padding</item>
    </style>
    <style name="toosmall" parent="bigmargin">
        <item name="android:layout_marginTop">@dimen/no_padding</item>
    </style>
    <style name="small_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/lit_textsize</item>
        <item name="android:layout_marginTop">@dimen/small_text_margin</item>
    </style>
    <style name="big_text" parent="small_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:layout_marginTop">@dimen/big_text_margin</item>
    </style>


    <dimen name="small_text_margin">10dp</dimen>
    <dimen name="big_text_margin">20dp</dimen>
</resources>
