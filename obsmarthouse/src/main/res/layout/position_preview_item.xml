<?xml version="1.0" encoding="utf-8"?><!--位置预览listItem-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/position_preview_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/big_margin"
        android:layout_marginLeft="@dimen/lit_margin"
        android:textSize="@dimen/mid_textsize" />

    <ImageView
        android:id="@+id/position_preview_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/position_preview_tv"
        android:layout_marginLeft="@dimen/lit_margin" />

</RelativeLayout>