<?xml version="1.0" encoding="utf-8"?>
<!--输入框-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/mid_padding"

    >

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/my_share"
         />

    <TextView
        android:id="@+id/hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/lit_padding"
        android:layout_toRightOf="@+id/img"
        android:textColor="@color/gray"
        android:text="@string/app_name"
        android:textSize="@dimen/mid_textsize" />

    <EditText
        android:id="@+id/edit"
        android:gravity="center"
        android:textSize="@dimen/mid_textsize"
        android:layout_width="@dimen/big_content_w"
        android:layout_height="@dimen/lit_content_h"
        android:singleLine="true"
        android:maxLength="@integer/max_input"
        android:layout_toRightOf="@+id/hint_tv"
        android:background="@null" />

</RelativeLayout>